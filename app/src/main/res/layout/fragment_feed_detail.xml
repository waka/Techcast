<waka.techcast.views.widgets.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="waka.techcast.fragments.FeedDetailFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_vertical_offset_large"
            android:paddingTop="@dimen/spacing_vertical_actionbar"
            android:background="@color/theme_primary"
            android:clipChildren="false"
            >
            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_vertical_offset_xlarge"
                android:textColor="@color/theme_text_white"
                android:textSize="@dimen/text_title"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:layout_marginTop="@dimen/spacing_vertical_offset"
                android:layout_marginLeft="@dimen/keyline_horizontal_offset_left"
                android:layout_marginRight="@dimen/keyline_horizontal_edge"
                android:paddingBottom="@dimen/spacing_vertical_offset_large"
                tools:ignore="RtlHardcoded"
                >
                <TextView
                    android:id="@+id/player_past_time"
                    android:text="@string/label_default_duration"
                    android:textColor="@color/theme_text_white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <SeekBar
                    android:id="@+id/player_seekbar"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    />

                <TextView
                    android:id="@+id/player_duration"
                    android:text="@string/label_default_duration"
                    android:textColor="@color/theme_text_white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/player_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/keyline_horizontal_edge_small"
            android:clipChildren="false"
            android:clipToPadding="false"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            >
            <ImageView
                android:id="@+id/play_button"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:background="@drawable/ic_av_play"
                android:contentDescription="@string/image_description"
                android:layout_marginTop="-44dp"
                />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical_offset_large"
            android:layout_marginLeft="@dimen/keyline_horizontal_edge"
            android:layout_marginRight="@dimen/keyline_horizontal_edge"
            >
            <ImageView
                android:layout_width="@dimen/accent_icon_size"
                android:layout_height="@dimen/accent_icon_size"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_content_paste_grey600_36dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_horizontal_offset_left_exclude_edge"
                android:layout_centerVertical="true"
                android:textColor="@color/theme_primary"
                android:textSize="@dimen/text_headline"
                android:text="@string/label_description"
                tools:ignore="RtlHardcoded"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical_offset"
            android:layout_marginLeft="@dimen/keyline_horizontal_edge"
            android:layout_marginRight="@dimen/keyline_horizontal_edge"
            >
            <TextView
                android:id="@+id/item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_horizontal_offset_left_exclude_edge"
                android:textColor="@color/theme_text_primary"
                android:textSize="@dimen/text_body"
                tools:ignore="RtlHardcoded"
                />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical_offset_large"
            android:layout_marginLeft="@dimen/keyline_horizontal_offset_left"
            android:layout_marginRight="@dimen/keyline_horizontal_edge"
            tools:ignore="RtlHardcoded"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_devider"
                />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical_offset_large"
            android:layout_marginLeft="@dimen/keyline_horizontal_edge"
            android:layout_marginRight="@dimen/keyline_horizontal_edge"
            >

            <ImageView
                android:layout_width="@dimen/accent_icon_size"
                android:layout_height="@dimen/accent_icon_size"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_link_grey600_36dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_horizontal_offset_left_exclude_edge"
                android:layout_centerVertical="true"
                android:textColor="@color/theme_primary"
                android:textSize="@dimen/text_headline"
                android:text="@string/label_relevant_links"
                tools:ignore="RtlHardcoded"
                />
        </RelativeLayout>

        <waka.techcast.views.widgets.RelevantLinksView
            android:id="@+id/show_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_vertical_offset_large"
            />
    </LinearLayout>

</waka.techcast.views.widgets.ObservableScrollView>
