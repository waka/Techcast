<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_vertical_offset_large"
    android:paddingRight="@dimen/spacing_vertical_offset_large"
    android:paddingBottom="@dimen/spacing_vertical_offset_large"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_vertical_offset_large"
        android:background="@drawable/card_contents_selector"
        tools:ignore="UselessParent"
        >
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/theme_text_primary"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/item_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical_offset"
            android:textColor="@color/theme_text_secondary"
            android:textSize="@dimen/text_caption"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_card_background"
        android:paddingLeft="@dimen/keyline_horizontal_edge"
        android:paddingRight="@dimen/keyline_horizontal_edge"
        android:paddingBottom="@dimen/spacing_vertical_offset"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment"
        >
        <LinearLayout
            android:id="@+id/download_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/card_button_selector"
            tools:ignore="UseCompoundDrawables,UselessParent"
            >
            <ImageView
                android:layout_width="@dimen/card_icon_size"
                android:layout_height="@dimen/card_icon_size"
                android:src="@drawable/ic_file_download_grey600_24dp"
                android:contentDescription="@string/image_description"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/label_download"
                android:textColor="@color/theme_text_secondary"
                android:textSize="@dimen/text_body"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/card_button_selector"
            tools:ignore="UseCompoundDrawables,UselessParent"
            >
            <ImageView
                android:layout_width="@dimen/card_icon_size"
                android:layout_height="@dimen/card_icon_size"
                android:src="@drawable/ic_remove_circle_outline_grey600_24dp"
                android:contentDescription="@string/image_description"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/label_clear"
                android:textColor="@color/theme_text_secondary"
                android:textSize="@dimen/text_body"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/play_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@drawable/card_button_selector"
            tools:ignore="UseCompoundDrawables,UselessParent"
            >
            <ImageView
                android:layout_width="@dimen/card_icon_size"
                android:layout_height="@dimen/card_icon_size"
                android:src="@drawable/ic_play_arrow_grey600_24dp"
                android:contentDescription="@string/image_description"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/label_play"
                android:textColor="@color/theme_text_secondary"
                android:textSize="@dimen/text_body"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/theme_card_shadow"
        />
</LinearLayout>